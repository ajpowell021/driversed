<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:padding="24dp"
    android:background="?attr/selectableItemBackground"
    >

    <TextView
        android:id="@+id/title"
        android:text="@string/trip_information_title"
        style="@style/RtlOverlay.DialogWindowTitle.AppCompat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp"/>

    <TextView
        android:id="@+id/student_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:textSize="16dp"
        android:text="Test Student"/>

    <TextView
        android:id="@+id/teacher_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/student_name_text"
        android:layout_below="@+id/title"
        android:textSize="16dp"
        android:layout_marginLeft="64dp"/>

    <TextView
        android:id="@+id/start_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/student_name_text"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/miles_driven_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_end_time"
        android:layout_marginTop="24dp"
        android:textSize="16dp"/>

</RelativeLayout>